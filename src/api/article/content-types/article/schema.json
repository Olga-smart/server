{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "readingTime": {
      "type": "integer",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "titleForRelatedArticlesSection": {
      "type": "string",
      "default": "More interesting articles"
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "coverColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "contentBlocks": {
      "type": "dynamiczone",
      "components": [
        "article-body.quote",
        "article-body.lead",
        "article-body.image",
        "article-body.code",
        "article-body.advertising",
        "article-body.text"
      ]
    }
  }
}
